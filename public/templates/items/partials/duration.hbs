<div
    class="a5e-box u-p-md a5e-form__section a5e-form__section--inline a5e-form__section--no-margin">
    <h3 class="u-text-bold u-text-sm u-flex-shrink-0 u-mb-0">
        {{ localize "A5E.ItemDuration" }}
    </h3>

    <div class="a5e-input-container a5e-input-container--field-set">
        {{#if data.duration.unit}}
            <input
                class="a5e-input a5e-input--inline a5e-input--slim a5e-input--small"
                type="number"
                name="data.duration.value"
                value="{{data.duration.value}}"
                data-dtype="Number"
                placeholder=""
            />
        {{/if}}

        <select
            class="u-w-full"
            name="data.duration.unit"
        >
            {{#select data.duration.unit}}
                <option value=""></option>

                {{#each config.timePeriods as |name key|}}
                    <option value="{{key}}">{{localize name}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
</div>
