<section
    class="
        u-flex
        u-flex-col
        u-gap-md
        u-h-full
        u-p-lg
        u-overflow-y-auto
        {{#unless (eq currentTab 'maneuverProperties')}}u-hidden{{/unless}}
        a5e-js-maneuver-properties-scroll-area
        a5e-js-sheet-page
    "
    data-group="item-{{item._id}}"
    data-tab="maneuverProperties"
>
    <div class="
        a5e-box
        u-p-md
        a5e-form__section
        a5e-form__section--inline a5e-form__section--no-margin
        ">
        <h3 class="u-text-bold u-text-sm u-flex-shrink-0 u-mb-0">
            {{ localize "A5E.ManeuverDegreePrompt" }}
        </h3>

        <div class="a5e-input-container a5e-input-container--inline">
            <select
                class="u-w-full"
                name="data.degree"
                data-dtype="Number"
            >
                {{#select item.data.degree}}
                    {{#each config.maneuverDegrees as |name degree|}}
                        <option value="{{degree}}">{{localize name}}</option>
                    {{/each}}
                {{/select}}
            </select>
        </div>
    </div>

    {{#if item.data.degree}}
        {{> "systems/a5e/templates/items/partials/maneuver-tradition.hbs" config=config item=item}}

        <div class="a5e-box u-p-md">
            <div class="a5e-form__section a5e-form__section--inline a5e-form__section--no-margin">
                <h3 class="u-text-bold u-text-sm u-flex-shrink-0 u-mb-0">
                    {{localize 'A5E.ItemExertionCost'}}
                </h3>

                <div class="a5e-input-container a5e-input-container--inline">
                    <input
                        class="a5e-input a5e-input--slim"
                        type="number"
                        data-dtype="Number"
                        name="data.exertionCost"
                        min="0"
                        value="{{item.data.exertionCost}}"
                    >
                </div>
            </div>
        </div>
    {{/if}}
</section>
