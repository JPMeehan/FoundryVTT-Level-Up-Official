<form
    class="u-flex u-flex-col u-h-full u-bg-sheet"
    autocomplete="off"
>
    <header class="a5e-sheet-header a5e-sheet-header--item">
        <img
            class="a5e-image a5e-image--item-header"
            src="{{item.img}}"
            title="{{item.name}}"
            data-edit="img"
        />

        <div class="a5e-sheet-header__primary-details">
            <div class="u-flex-grow u-flex-grow--spell">
                <input
                    class="a5e-input a5e-input--character-name"
                    name="name"
                    type="text"
                    value="{{item.name}}"
                    placeholder="{{ localize 'A5E.ItemNew' }}"
                />

                <span class="u-flex u-text-medium">
                    {{localize (lookup config.spellLevels item.data.level)}}
                    {{#if item.data.schools.primary}}({{localize item.data.schools.primary}}){{/if}}
                </span>
            </div>

            <div>

            </div>
        </div>
    </header>

    <nav
        class="u-flex"
        data-group="item-{{item._id}}"
    >
        <a
            class="
                a5e-tab
                {{#if (eq currentTab 'description')}}a5e-tab--active{{/if}}
                a5e-js-sheet-tab
            "
            data-tab="description"
        >
            {{ localize "A5E.Description" }}
        </a>

        <a
            class="
                a5e-tab
                {{#if (eq currentTab 'spellProperties')}}a5e-tab--active{{/if}}
                a5e-js-sheet-tab
            "
            data-tab="spellProperties"
        >
            {{ localize "A5E.TabSpellProperties" }}
        </a>

        <a
            class="
                a5e-tab
                {{#if (eq currentTab 'details')}}a5e-tab--active{{/if}}
                a5e-js-sheet-tab
            "
            data-tab="details"
        >
            {{ localize "A5E.TabDetails" }}
        </a>

        <div class="u-border-b u-border-gray u-w-full"></div>
    </nav>

    <section class="u-overflow-y-hidden u-h-full a5e-js-sheet-body">
        <section
            class="
                a5e-js-sheet-page
                a5e-sheet__tab-content
                a5e-sheet__tab-content--item-details
                u-h-full u-overflow-y-auto
                a5e-js-item-description-scroll-area
                {{#unless (eq currentTab 'description')}}a5e-sheet__tab-content--hidden{{/unless}}
            "
            data-group="item-{{item._id}}"
            data-tab="description"
        >
            {{ editor content=data.description target="data.description" button=true owner=true editable=true }}
        </section>

        {{> "systems/a5e/templates/items/tabs/spell-properties.hbs" config=config currentTab=currentTab item=item}}
        {{> "systems/a5e/templates/items/tabs/details.hbs" config=config currentTab=currentTab item=item}}
    </section>
</form>
