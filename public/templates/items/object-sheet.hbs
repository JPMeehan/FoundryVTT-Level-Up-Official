<form
    class="u-flex u-flex-col u-h-full u-bg-sheet"
    autocomplete="off"
>
    <header class="a5e-sheet-header a5e-sheet-header--item">
        <img
            class="a5e-image a5e-image--item-header"
            src="{{item.img}}"
            title="{{item.name}}"
            data-edit="img"
        />

        <div class="u-flex-grow">
            <input
                class="a5e-input a5e-input--character-name"
                name="name"
                type="text"
                value="{{item.name}}"
                placeholder="{{ localize 'A5E.ItemNew' }}"
            />
        </div>
    </header>

    <nav
        class="u-flex"
        data-group="item-{{item._id}}"
    >
        <a
            class="
                a5e-tab
                a5e-js-sheet-tab
                {{#if (eq currentTab 'description')}}a5e-tab--active{{/if}}
            "
            data-tab="description"
        >
            {{ localize "A5E.Description" }}
        </a>

        <a
            class="
                a5e-tab
                a5e-js-sheet-tab
                {{#if (eq currentTab 'objectProperties')}}a5e-tab--active{{/if}}
            "
            data-tab="objectProperties"
        >
            {{ localize "A5E.TabObjectProperties" }}
        </a>

        {{#if (eq data.objectType 'ammunition')}}
            <a
                class="
                    a5e-tab
                    a5e-js-sheet-tab
                    {{#if (eq currentTab 'ammunitionProperties')}}a5e-tab--active{{/if}}
                "
                data-tab="ammunitionProperties"
            >
                {{ localize "A5E.TabAmmunitionProperties" }}
            </a>
        {{/if}}

        {{#if (eq data.objectType 'armor')}}
            <a
                class="
                    a5e-tab
                    a5e-js-sheet-tab
                    {{#if (eq currentTab 'armorProperties')}}a5e-tab--active{{/if}}
                "
                data-tab="armorProperties"
            >
                {{ localize "A5E.TabArmorProperties" }}
            </a>
        {{/if}}

        {{#if (eq data.objectType 'weapon')}}
            <a
                class="
                    a5e-tab
                    a5e-js-sheet-tab
                    {{#if (eq currentTab 'weaponProperties')}}a5e-tab--active{{/if}}
                "
                data-tab="weaponProperties"
            >
                {{ localize "A5E.TabWeaponProperties" }}
            </a>
        {{/if}}

        <a
            class="
                a5e-tab
                a5e-js-sheet-tab
                {{#if (eq currentTab 'details')}}a5e-tab--active{{/if}}
            "
            data-tab="details"
        >
            {{ localize "A5E.TabDetails" }}
        </a>

        <div class="u-border-b u-border-gray u-w-full"></div>
    </nav>

    <section class="u-overflow-y-hidden u-h-full a5e-js-sheet-body">
        {{#if (eq currentTab 'description')}}
            <section
                class="
                    u-gap-md
                    u-grid
                    u-h-full
                    u-p-lg
                    u-overflow-y-auto
                    a5e-js-sheet-page
                    a5e-js-item-description-scroll-area
                "
                data-group="item-{{item._id}}"
                data-tab="description"
            >
                {{ editor content=data.description target="data.description" button=true owner=true editable=true }}
            </section>
        {{/if}}

        {{> "systems/a5e/templates/items/tabs/object-properties.hbs" config=config currentTab=currentTab item=item}}
        {{> "systems/a5e/templates/items/tabs/ammunition-properties.hbs" config=config currentTab=currentTab item=item}}
        {{> "systems/a5e/templates/items/tabs/armor-properties.hbs" config=config currentTab=currentTab item=item}}
        {{> "systems/a5e/templates/items/tabs/weapon-properties.hbs" config=config currentTab=currentTab item=item}}

        {{#if (eq currentTab 'details')}}
            {{> "systems/a5e/templates/items/tabs/details.hbs" config=config item=item}}
        {{/if}}
    </section>
</form>
