                    {{else}}
                        <li
                            class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                            {{ localize "A5E.None" }}
                        </li>
                    {{/if}}
                </ul>
            </section>

            <section class="u-bg-gray u-flex u-flex-col u-gap-sm u-p-md u-pos-relative u-rounded">
                <h2 class="u-text-bold u-text-sm">
                    {{ localize "A5E.ToolProficiencies" }}
                </h2>

                <i
                    class="a5e-config-button a5e-config-button--details a5e-js-configure-tools fas fa-cog">
                </i>

                <ul class="u-flex u-flex-wrap u-gap-sm u-list-style-none u-m-0 u-p-0 u-text-xxs">
                    {{#if data.proficiencies.tools.length}}
                        {{#each data.proficiencies.tools}}
                            <li
                                class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                                {{ this }}
                            </li>
                        {{/each}}
                    {{else}}
                        <li
                            class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                            {{ localize "A5E.None" }}
                        </li>
                    {{/if}}
                </ul>
            </section>
        {{/unless}}

        <section class="u-bg-gray u-flex u-flex-col u-gap-sm u-p-md u-pos-relative u-rounded">
            <h2 class="u-text-bold u-text-sm">
                {{ localize "A5E.Languages" }}
            </h2>

            <i
                class="a5e-config-button a5e-config-button--details a5e-js-configure-languages fas fa-cog">
            </i>

            <ul class="u-flex u-flex-wrap u-gap-sm u-list-style-none u-m-0 u-p-0 u-text-xxs">
                {{#if data.proficiencies.languages.length}}
                    {{#each data.proficiencies.languages}}
                        <li
                            class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                            {{ this }}
                        </li>
                    {{/each}}
                {{else}}
                    <li
                        class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                        {{ localize "A5E.None" }}
                    </li>
                {{/if}}
            </ul>
        </section>
    </div>

    <div>
        <ul class="u-flex-shrink-0 u-gap-sm u-grid u-grid-2 u-list-style-none u-m-0 u-p-0">
            {{#each data.skills as |skill key|}}
                {{> "systems/a5e/templates/actors/partials/skill.hbs" skill=skill key=key }}
            {{/each}}
        </ul>
    </div>
</section>
