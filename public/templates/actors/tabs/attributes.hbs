<section
    class="a5e-js-sheet-page a5e-js-attributes-scroll-area a5e-sheet__tab-content a5e-sheet__tab-content--attributes {{#unless (eq currentTab 'attributes')}}a5e-sheet__tab-content--hidden{{/unless}}"
    data-group="main"
    data-tab="attributes"
>
    <div class="u-font-sans-serif u-flex u-flex-col u-gap-md">
        <section class="u-bg-gray u-flex u-flex-col u-gap-sm u-p-md u-pos-relative u-rounded">
            <h2 class="u-text-bold u-text-sm">
                {{ localize "A5E.SensesSpecial" }}
            </h2>

            <i class="
                a5e-config-button
                a5e-config-button--details
                a5e-js-configure-senses
                fas
                fa-cog
            ">
            </i>

            <ul class="u-flex u-flex-wrap u-gap-sm u-list-style-none u-m-0 u-p-0 u-text-xxs">
                {{#if senses.length}}
                    {{#each senses}}
                        <li
                            class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                            {{ this.name }} - {{ this.range }}
                            {{ localize "A5E.MeasurementFeetAbbr" }}
                        </li>
                    {{/each}}
                {{else}}
                    <li
                        class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                        {{ localize "A5E.None" }}
                    </li>
                {{/if}}
            </ul>
        </section>

        <section class="u-bg-gray u-flex u-flex-col u-gap-sm u-p-md u-pos-relative u-rounded">
            <h2 class="u-text-bold u-text-sm">
                {{ localize "A5E.DamageResistances" }}
            </h2>

            <i class="
                a5e-config-button
                a5e-config-button--details
                a5e-js-configure-damage-resistances
                fas
                fa-cog
            ">
            </i>

            <ul class="u-flex u-flex-wrap u-gap-sm u-list-style-none u-m-0 u-p-0 u-text-xxs">
                {{#if damageResistances }}
                    {{#each damageResistances}}
                        <li
                            class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                            {{ this }}
                        </li>
                    {{/each}}
                {{else}}
                    <li
                        class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                        {{ localize "A5E.None" }}
                    </li>
                {{/if}}
            </ul>
        </section>

        <section class="u-bg-gray u-flex u-flex-col u-gap-sm u-p-md u-pos-relative u-rounded">
            <h2 class="u-text-bold u-text-sm">
                {{ localize "A5E.DamageImmunities" }}
            </h2>

            <i class="
                a5e-config-button
                a5e-config-button--details
                a5e-js-configure-damage-immunities
                fas
                fa-cog
            ">
            </i>

            <ul class="u-flex u-flex-wrap u-gap-sm u-list-style-none u-m-0 u-p-0 u-text-xxs">
                {{#if damageImmunities }}
                    {{#each damageImmunities}}
                        <li
                            class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                            {{ this }}
                        </li>
                    {{/each}}
                {{else}}
                    <li
                        class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                        {{ localize "A5E.None" }}
                    </li>
                {{/if}}
            </ul>
        </section>

        <section class="u-bg-gray u-flex u-flex-col u-gap-sm u-p-md u-pos-relative u-rounded">
            <h2 class="u-text-bold u-text-sm">
                {{ localize "A5E.DamageVulnerabilities" }}
            </h2>

            <i class="
                a5e-config-button
                a5e-config-button--details
                a5e-js-configure-damage-vulnerabilities
                fas
                fa-cog
            ">
            </i>

            <ul class="u-flex u-flex-wrap u-gap-sm u-list-style-none u-m-0 u-p-0 u-text-xxs">
                {{#if damageVulnerabilities }}
                    {{#each damageVulnerabilities}}
                        <li
                            class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                            {{ this }}
                        </li>
                    {{/each}}
                {{else}}
                    <li
                        class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                        {{ localize "A5E.None" }}
                    </li>
                {{/if}}
            </ul>
        </section>

        <section class="u-bg-gray u-flex u-flex-col u-gap-sm u-p-md u-pos-relative u-rounded">
            <h2 class="u-text-bold u-text-sm">
                {{ localize "A5E.ConditionImmunities" }}
            </h2>

            <i class="
                a5e-config-button
                a5e-config-button--details
                a5e-js-configure-condition-immunities
                fas
                fa-cog
            ">
            </i>

            <ul class="u-flex u-flex-wrap u-gap-sm u-list-style-none u-m-0 u-p-0 u-text-xxs">
                {{#if conditionImmunities }}
                    {{#each conditionImmunities}}
                        <li
                            class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                            {{ this }}
                        </li>
                    {{/each}}
                {{else}}
                    <li
                        class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                        {{ localize "A5E.None" }}
                    </li>
                {{/if}}
            </ul>
        </section>

        {{#unless (eq actorType "npc")}}
            <section class="u-bg-gray u-flex u-flex-col u-gap-sm u-p-md u-pos-relative u-rounded">
                <h2 class="u-text-bold u-text-sm">
                    {{ localize "A5E.ArmorProficiencies" }}
                </h2>

                <i
                    class="a5e-config-button a5e-config-button--details a5e-js-configure-armor-proficiencies fas fa-cog">
                </i>

                <ul class="u-flex u-flex-wrap u-gap-sm u-list-style-none u-m-0 u-p-0 u-text-xxs">
                    {{#if data.proficiencies.armor.length }}
                        {{#each data.proficiencies.armor}}
                            <li
                                class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                                {{ this }}
                            </li>
                        {{/each}}
                    {{else}}
                        <li
                            class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
                            {{ localize "A5E.None" }}
                        </li>
                    {{/if}}
                </ul>
            </section>

            <section class="u-bg-gray u-flex u-flex-col u-gap-sm u-p-md u-pos-relative u-rounded">
                <h2 class="u-text-bold u-text-sm">
                    {{ localize "A5E.WeaponProficiencies" }}
                </h2>

                <i
                    class="a5e-config-button a5e-config-button--details a5e-js-configure-weapon-proficiencies fas fa-cog">
                </i>

                <ul class="u-flex u-flex-wrap u-gap-sm u-list-style-none u-m-0 u-p-0 u-text-xxs">
                    {{#if data.proficiencies.weapons.length}}
                        {{#each data.proficiencies.weapons}}
                            <li
                                class="u-bg-green u-border u-border-green u-px-sm u-py-xxxs u-rounded u-text-light">
