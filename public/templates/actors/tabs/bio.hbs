<section
    class="
        u-flex
        u-flex-col
        u-gap-lg
        u-h-full
        u-p-lg
        u-overflow-y-auto
        {{#unless (eq currentTab 'biography')}}u-hidden{{/unless}}
        a5e-js-sheet-page
        a5e-js-biography-scroll-area
    "
    data-group="main"
    data-tab="biography"
>
    <section class="a5e-box u-p-md a5e-form__section--bio-wrapper">
        <div class="u-align-center u-flex u-gap-md u-justify-space-between ">
            <h3 class="u-text-bold u-text-sm u-flex-shrink-0 u-mb-0">
                {{localize 'A5E.DetailsAge'}}
            </h3>

            <div class="a5e-input-container a5e-input-container--bio">
                <input
                    class="a5e-input a5e-input--slim"
                    type="text"
                    name="data.details.age"
                    value="{{details.age}}"
                >
            </div>
        </div>

        <div class="u-align-center u-flex u-gap-md u-justify-space-between ">
            <h3 class="u-text-bold u-text-sm u-flex-shrink-0 u-mb-0">
                {{localize 'A5E.DetailsEyeColor'}}
            </h3>

            <div class="a5e-input-container a5e-input-container--bio">
                <input
                    class="a5e-input a5e-input--slim"
                    type="text"
                    name="data.details.eyeColor"
                    value="{{details.eyeColor}}"
                >
            </div>
        </div>

        <div class="u-align-center u-flex u-gap-md u-justify-space-between ">
            <h3 class="u-text-bold u-text-sm u-flex-shrink-0 u-mb-0">
                {{localize 'A5E.DetailsHairColor'}}
            </h3>

            <div class="a5e-input-container a5e-input-container--bio">
                <input
                    class="a5e-input a5e-input--slim"
                    type="text"
                    name="data.details.hairColor"
                    value="{{details.hairColor}}"
                >
            </div>
        </div>

        <div class="u-align-center u-flex u-gap-md u-justify-space-between ">
            <h3 class="u-text-bold u-text-sm u-flex-shrink-0 u-mb-0">
                {{localize 'A5E.DetailsSkinColor'}}
            </h3>

            <div class="a5e-input-container a5e-input-container--bio">
                <input
                    class="a5e-input a5e-input--slim"
                    type="text"
                    name="data.details.skinColor"
                    value="{{details.skinColor}}"
                >
            </div>
        </div>

        <div class="u-align-center u-flex u-gap-md u-justify-space-between ">
            <h3 class="u-text-bold u-text-sm u-flex-shrink-0 u-mb-0">
                {{localize 'A5E.DetailsHeight'}}
            </h3>

            <div class="a5e-input-container a5e-input-container--bio">
                <input
                    class="a5e-input a5e-input--slim"
                    type="text"
                    name="data.details.height"
                    value="{{details.height}}"
                >
            </div>
        </div>

        <div class="u-align-center u-flex u-gap-md u-justify-space-between ">
            <h3 class="u-text-bold u-text-sm u-flex-shrink-0 u-mb-0">
                {{localize 'A5E.DetailsWeight'}}
            </h3>

            <div class="a5e-input-container a5e-input-container--bio">
                <input
                    class="a5e-input a5e-input--slim"
                    type="text"
                    name="data.details.weight"
                    value="{{details.weight}}"
                >
            </div>
        </div>

        <div class="u-align-center u-flex u-gap-md u-justify-space-between ">
            <h3 class="u-text-bold u-text-sm u-flex-shrink-0 u-mb-0">
                {{localize 'A5E.DetailsGender'}}
            </h3>

            <div class="a5e-input-container a5e-input-container--bio">
                <input
                    class="a5e-input a5e-input--slim"
                    type="text"
                    name="data.details.gender"
                    value="{{details.gender}}"
                >
            </div>
        </div>
    </section>

    <section class="u-flex u-flex-grow u-gap-lg">
        <div class="u-flex u-flex-col u-w-full">
            <h3 class="u-border-none u-font-serif u-pb-sm u-pl-md u-text-lg">
                {{localize "A5E.DetailsBackstory"}}
            </h3>

            {{ editor content=data.details.bio target="data.details.bio" button=true owner=true editable=true }}
        </div>

        <div class="u-flex u-flex-col u-w-full">
            <h3 class="u-border-none u-font-serif u-pb-sm u-pl-md u-text-lg">
                {{localize "A5E.DetailsAppearance"}}
            </h3>

            {{
                editor
                content=data.details.appearance
                target="data.details.appearance"
                button=true owner=true
                editable=true
            }}
        </div>
    </section>
</section>
