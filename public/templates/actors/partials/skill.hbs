<li
    class="a5e-item a5e-item--skill a5e-js-roll-skill-check"
    data-skill="{{ key }}"
>
    <span class="
        a5e-skill__value
        {{#if skill.proficient}}a5e-skill__value--green{{/if}}
    ">
        {{ skill.deterministicBonus }}
    </span>

    <i class="a5e-config-button a5e-config-button--skill a5e-js-configure-skill fas fa-cog"></i>

    <div class="u-flex u-flex-col u-gap-xs u-justify-center">
        <header class="u-align-center u-flex u-gap-sm">
            <h3 class="u-text-bold u-text-sm">{{ skill.label }}</h3>
            {{#if skill.expertiseDieSize }}
                <span class="u-text-xs">({{ skill.expertiseDieSize }})</span>
            {{/if}}
        </header>

        <ul class="
            u-flex
            u-flex-wrap
            u-font-san-serif
            u-gap-md
            u-list-style-none
            u-m-0
            u-p-0
            u-text-xxs
            u-gap-sm
        ">
            {{#if skill.specialties.length}}
                {{#each skill.specialties }}
                    <li class="a5e-tag a5e-tag--tight">{{ this }}</li>
                {{/each }}
            {{else}}
                <li class="u-border u-border-transparent u-py-xxxs u-text-italic u-text-medium">
                    {{ localize "A5E.SkillNoSpecialties"}}
                </li>
            {{/if}}
        </ul>
    </div>
</li>
