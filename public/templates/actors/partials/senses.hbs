<section class="u-bg-gray u-flex u-flex-col u-gap-sm u-p-md u-pos-relative u-rounded">
    <h2 class="u-text-bold u-text-sm">
        {{ localize "A5E.SensesSpecial" }}
    </h2>

    <i class="a5e-config-button a5e-config-button--details fas fa-cog a5e-js-configure-senses"></i>

    <ul class="
        u-flex
        u-flex-wrap
        u-font-san-serif
        u-gap-sm
        u-list-style-none
        u-m-0
        u-p-0
        u-text-xxs
    ">
        {{#if senses.length}}
            {{#each senses}}
                <li class="a5e-tag a5e-tag--tight">{{ this.name }} - {{ this.range }}
                    {{ localize "A5E.MeasurementFeetAbbr" }}
                </li>
            {{/each}}
        {{else}}
            <li class="a5e-tag a5e-tag--tight">
                {{ localize "A5E.None" }}
            </li>
        {{/if}}
    </ul>
</section>
